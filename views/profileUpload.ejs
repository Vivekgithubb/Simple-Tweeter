<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
  </head>
  <body>
    <div
      class="w-full min-h-screen bg-zinc-900 text-white p-10 flex flex-col justify-center items-center"
    >
      <div
        class="flex flex-col justify-center items-center p-5 bg-zinc-800 rounded-2xl shadow-lg shadow-cyan-600/50 ring-2 ring-blue-500"
      >
        <h1 class="text-3xl mb-10 font-bold">Upload Your Profile-Picture</h1>
        <form
          method="post"
          action="/upload"
          enctype="multipart/form-data"
          class="flex flex-col gap-4 justify-center w-full items-center"
        >
          <div class="flex flex-row gap-3 justify-center items-center">
            <label
              for="image"
              class="custom-file-upload bg-red-700 p-2 rounded-2xl"
              >Choose File</label
            >
            <span class="file-name italic" id="file-name">No file chosen</span>
          </div>

          <input type="file" name="image" id="image" hidden />
          <input
            type="submit"
            value="Upload"
            class="bg-blue-600 p-2 rounded-lg"
          />
        </form>
      </div>
    </div>
    <script>
      const fileInput = document.getElementById("image");
      const fileName = document.getElementById("file-name");

      fileInput.addEventListener("change", function () {
        fileName.textContent =
          fileInput.files.length > 0
            ? fileInput.files[0].name
            : "No file chosen";
      });
    </script>
  </body>
</html>
